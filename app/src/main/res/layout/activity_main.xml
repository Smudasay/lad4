<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sayapplication.applicationlab4.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:text="Currency Converter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:text="THB to MYR"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="70dp"
        />
    <EditText
        android:id="@+id/baht1"
        android:layout_width="101dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@id/tv1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="100dp"

        />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/rin1"
        android:layout_width="119dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintBottom_toBottomOf="@id/button1"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="103dp"
        android:layout_height="23dp"
        android:text="MYR to THB"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="260dp"
        />

    <EditText
        android:id="@+id/baht2"
        android:layout_width="101dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="290dp"
        />

    <EditText
        android:id="@+id/rin2"
        android:layout_width="119dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintBottom_toBottomOf="@id/button2"
        android:layout_marginVertical="0dp"
        />
    />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="30dp"
        />
</android.support.constraint.ConstraintLayout>
